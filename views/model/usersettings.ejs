<div id='settings'>
    <div id='basicinfo'>
        <div id='logo'>
            <img src='<%= loginStatus.logo %>'>
        </div>
        <div id='uploadLogoFormDiv'>
            <form id='uploadLogoForm' enctype="multipart/form-data">
                <div class='title' id='logotitle'>更新大頭貼<input type="file" name="logo" /></div>
                <input type="text" name='username' value='<%= loginStatus.name %>' style="display:none;">
                <input type="text" name='role' value='host' style="display:none;">
                <input type="text" name='email' value='<%= loginStatus.email %>' style="display:none;">
                <input type="submit" value='上傳'>
              </form>
        </div>
        <div id='name'>
            <div class='title'>我的名稱</div>
            <div class='content'></div>
        </div>
        <div id='email'>
            <div class='title'>Email</div>
            <div class='content'></div>
        </div>
        <div id='description'>
            <div class='title'>關於我</div>
            <div class='content'></div>
        </div>
    </div>
</div>